<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!--Development by SmartMob (Manager : Mohammad Mokhles)-->

    <EditText
        android:id="@+id/et_newpass_email"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:hint="لطفا ایمیل خود را وارد کنید" />


    <EditText
        android:id="@+id/et_newpass_pass"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:hint="لطفا پسورد جدید خود را وارد کنید" />



    <Button
        android:id="@+id/btn_new_pass"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/buttons_bg_1"
        android:textColor="@drawable/btn_state"
        android:layout_height="wrap_content"
        android:text="تایید" />


</LinearLayout>