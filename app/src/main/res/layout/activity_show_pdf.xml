<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ShowPdfActivity">

    <!-- toolbar -->
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <com.joanzapata.pdfview.PDFView
        android:layout_below="@id/app_bar"
        android:id="@+id/pdfview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="7dp"
                android:background="#88d6d6d6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="ارتباط با استاد"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_showpdf_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/us_teacher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="7dp"
                android:background="#88d6d6d6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="آزمون"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_showpdf_exam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/exam" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="7dp"
                android:background="#88d6d6d6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="تمرین در خانه"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_showpdf_testhome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/test_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="7dp"
                android:background="#88d6d6d6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="تمرین در کلاس"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_showpdf_testSchool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/test_school" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
